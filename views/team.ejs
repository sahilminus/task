<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./head'); %>
</head>

<body class="container">

    <header>
        <%- include('./header'); %>
    </header>

    <main class="text-center">
        <% var next=page+1%>
        <% 
        var prev;
            if(page==1){
                prev=1
            }else{
                prev=page-1;
            }

        %>
        <table class="table table-hover table-striped table-sm text-center">
            <thead class="thead-dark ">
                <tr>
                    <th scope="col">Team Name</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Email</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i<teams.length; i++) {%>
                <tr>
                    <td>
                        <%= teams[i].team_name%>
                    </td>
                    <td>
                        <%= teams[i].full_name%>
                    </td>
                    <td>
                        <%= teams[i].email%>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
        <a class="btn btn-dark btn-sm" role="button" href=<%="/teams?page="+ prev%>>Previous</a>
        <a class="btn btn-dark btn-sm" role="button" href=<%="/teams?page="+ next%>>Next</a>
        <hr class="my-4">
    </main>

    <footer>
        <%- include('./footer'); %>
    </footer>

</body>

</html>